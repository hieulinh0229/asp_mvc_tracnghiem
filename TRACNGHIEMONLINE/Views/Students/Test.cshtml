    Layout = "";

    Subject sub = ViewData["SUBS"] as Subject;
    User user = ViewData["USER"] as User;
    TypeExam typeEx = ViewData["TYPE"] as TypeExam;
    ExamModel[] questions = ViewData["QUES"]  as ExamModel[];


}
