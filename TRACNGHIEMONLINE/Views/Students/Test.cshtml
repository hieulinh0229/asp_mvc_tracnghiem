        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row align-items-center">
                    <div class="col-5">
                        <h4 class="page-title">Bài kiểm tra </h4>
                        <h5 class="page-title">Môn học: @sub.Subject_name </h5>
                       
                        @if (typeEx.Name.Equals(EnumTypExam.THIHOCKY.ToString()))
                        {
                            <h5> Thi học kỳ</h5>
                        }
                        @if (typeEx.Name.Equals(EnumTypExam.BAITAPTULUYEN.ToString()))
                        {
                            <h5>  Bài tập tự luyện</h5>
                        }
                        @if (typeEx.Name.Equals(EnumTypExam.KIEMTRAGIUAKY.ToString()))
                        {
                            <h5>Kiểm tra giữa kỳ</h5>
                        }
                      
                        <div id="clock">
                      <div style ="color:red" >Thời gian còn lại <span id="time">@typeEx.Time_to_do:00</span> phút</div>
                     </div>
                    </div>

                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    @if (ViewBag.error != null)
                                    {
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <span style="color:red">@ViewBag.error</span>
                                            </div>
                                        </div>

                                    }
                                        <h2>Trắc nghiệm khách quan.</h2>
                                        @using (Html.BeginForm())
                                        {
                                            @Html.HiddenFor(x=>x.Id_Sub)
                                            @Html.HiddenFor(x=>x.Id_Type)
                                            @Html.EditorFor(x=>x.Questions)
                                            <button class="btn btn-primary" type="submit" id="submit-btn" onclick=" return confirm('Xác nhận nộp bài?')" >Hoàn thành</button>
                                        }
                                     
                                    </div>

                        </div>
                    </div>

                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
