@using TRACNGHIEMONLINE.Models.Enums
@model TRACNGHIEMONLINE.Common.User

@{
    var admin = Model;
    ViewBag.Title = "Hệ thống trắc nghiệm online";
    Layout = "";
    Subject[] subjects = ViewData["SUBS"] as Subject[];
    Class[] classes = ViewData["CLASS"] as Class[];

}
<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        @ViewBag.Title
    </title>
    <meta name="robots" content="noindex,nofollow">
    <link rel="canonical" href="https://www.wrappixel.com/templates/xtreme-admin-lite/" />

    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/favicon.png">

    <link href="~/dist/css/style.min.css" rel="stylesheet">

</head>

<body>
 
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

        <header class="topbar" data-navbarbg="skin5">
            <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                <div class="navbar-header" data-logobg="skin5">
                
                    <a class="navbar-brand" href="/home">
                        <!-- Logo icon -->
                        <b class="logo-icon">
                       
                            <img src="~/assets/images/logo-icon.png" alt="homepage" class="dark-logo" />
                       
                            <img src="~/assets/images/logo-light-icon.png" alt="homepage" class="light-logo" />
                        </b>
                    
                        <span class="logo-text">
                      
                            <img src="~/assets/images/logo-text.png" alt="homepage" class="dark-logo" />
                   
                            <img src="~/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                        </span>
                    </a>
                
                    <a class="nav-toggler waves-effect waves-light d-block d-md-none" href="javascript:void(0)">
                        <i class="ti-menu ti-close"></i>
                    </a>
                </div>
          
                <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
           
                    <ul class="navbar-nav float-start me-auto">
                    </ul>
                 
                    <ul class="navbar-nav float-end">
                   
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/assets/images/users/1.jpg" alt="user" class="rounded-circle" width="31">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end user-dd animated" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/admin/detail">
                                    <i class="ti-user m-r-5 m-l-5"></i>
                                    My Profile
                                </a>
                                <a class="dropdown-item" href="javascript:void(0)">
                                    <i class="ti-wallet m-r-5 m-l-5"></i>
                                    My Balance
                                </a>
                                <a class="dropdown-item" href="javascript:void(0)">
                                    <i class="ti-email m-r-5 m-l-5"></i>
                                    Inbox
                                </a>
                            </ul>
                        </li>
     
                    </ul>
                </div>
            </nav>
        </header>

        <aside class="left-sidebar" data-sidebarbg="skin6">
      
            <div class="scroll-sidebar">
           
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                 
                        <li>
                 
                            <div class="user-profile d-flex no-block dropdown m-t-20">
                                <div class="user-pic">
                                    @if (@admin.AVATAR == null)
                                    {
                                        <img src="~/assets/images/users/5.jpg"
                                             class="rounded-circle" width="40" />
                                    }
                                    else
                                    {
                                        <img src="~/Uploads/@admin.AVATAR"
                                             class="rounded-circle" width="40" />

                                    }
                                </div>

                                <div class="user-content hide-menu m-l-10">
                                    <a href="#" class="" id="Userdd" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <h5 class="m-b-0 user-name font-medium">
                                            @admin.NAME <i class="fa fa-angle-down"></i>
                                        </h5>
                                        <span class="op-5 user-email">@admin.EMAIL</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="Userdd">
                                        <a class="dropdown-item" href="/admin/detail">
                                            <i class="ti-user m-r-5 m-l-5"></i> My Profile
                                        </a>
                                        <div class="dropdown-divider"></div>

                                        <a class="dropdown-item" href="/logout">
                                            <i class="fa fa-power-off m-r-5 m-l-5"></i> Logout
                                        </a>
                                    </div>
                                </div>
                            </div>
            
                        </li>
                        <li class="p-15 m-t-10">
                            <a href="#"
                               class="btn d-block w-100 create-btn text-white no-block d-flex align-items-center">
                                <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Quản lý lớp học và môn học</span>
                            </a>
                        </li>
     
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               href="/admin/StudentManagement" aria-expanded="false">
                                <i class="mdi mdi-view-dashboard"></i><span class="hide-menu">Quản lý sinh viên</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link waves-effect waves-dark sidebar-link"
                               href="/admin/detail" aria-expanded="false">
                                <i class="mdi mdi-account-network"></i><span class="hide-menu">Cài đặt tài khoản</span>
                            </a>
                        </li>

                    </ul>

                </nav>
             
            </div>
         
        </aside>
    
        <div class="page-wrapper">
      
            <div class="page-breadcrumb">
                <div class="row align-items-center">
                    <div class="col-5">
                        <h4 class="page-title">Dashboard</h4>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                                </ol>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
      
            <div class="container-fluid">
     
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <i class="m-r-5 font-22 mdi mdi-numeric-1-box-multiple-outline"></i>
                                    Danh sách môn học
                                </h4>
                                <div class=" m-t-10">
                                    <a href="/subject/create">
                                        <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Thêm  môn học</span>
                                    </a>
                                </div>

                                @if (subjects.Length > 0)
                                {
                                    <div class=" m-t-10">
                                        <a href="/subject/CreateTypeExam">
                                            <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Thêm  kỳ kiểm tra</span>
                                        </a>
                                    </div>
                                    <div class=" m-t-10">
                                        <a href="/subject/CreateQuestion">
                                            <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Thêm câu hỏi</span>
                                        </a>
                                    </div>

                                }
                                <div class="table-responsive">
                                    @for (var i = 0; i < subjects.Length; i++)
                                    {
                                        var sub = subjects[i];
                                        var tests = sub == null ? null : sub.Tests.ToArray();
                                        var typeXams = sub == null ? null : sub.TypeExams.ToArray();
                                        var index = @i + 1;
                                        <h6 class="card-title">
                                            <a href="javascript:void(0)">
                                                <i class="m-r-5 font-18 mdi mdi-numeric-@index-box-multiple-outline"></i>
                                                @sub.Subject_name
                                            </a>
                                        </h6>

                                        @if (typeXams == null || typeXams.Length == 0)
                                        {
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <span style="color:red">Không có kì kiểm tra </span>
                                                </div>
                                            </div>

                                        }
                                        else
                                        {
                                            <h6 class="card-title">
                                                <a>
                                                    <i>Các kỳ kiểm tra</i>
                                                </a>
                                            </h6>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Tên kì kiểm tra</th>
                                                            <th scope="col">Môn học</th>
                                                            <th scope="col">Tổng số câu hỏi</th>
                                                            <th scope="col">Thời gian làm bài</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @for (var j = 0; j < typeXams.Length; j++)
                                                        {
                                                            var type = typeXams[j];
                                                            var stt = j + 1;
                                                            if (type != null)
                                                            {
                                                                <tr>
                                                                    <th scope="row">@stt</th>
                                                                    @if (type.Name.Equals(EnumTypExam.THIHOCKY.ToString()))
                                                                    {

                                                                        <td> Thi học kỳ</td>
                                                                    }

                                                                    @if (type.Name.Equals(EnumTypExam.BAITAPTULUYEN.ToString()))
                                                                    {

                                                                        <td>  Bài tập tư luyện</td>
                                                                    }
                                                                    @if (type.Name.Equals(EnumTypExam.KIEMTRAGIUAKY.ToString()))
                                                                    {

                                                                        <td>Kiểm tra giữa kỳ</td>
                                                                    }
                                                                    <td>@sub.Subject_name</td>
                                                                    <td>@type.Total_questions</td>
                                                                    <td>@type.Time_to_do <a>Phut</a></td>

                                                                </tr>
                                                            }

                                                        }
                                                    </tbody>

                                                </table>

                                            </div>
                                        }
                                        @if (tests == null || tests.Length == 0)
                                        {
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <span style="color:red">Không có bài kiểm tra </span>
                                                </div>
                                            </div>

                                        }
                                        else
                                        {
                                            <h6 class="card-title">
                                                <a>
                                                    <i> Bài kiểm tra</i>
                                                </a>
                                            </h6>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Tên bài kiểm tra</th>
                                                            <th scope="col">Sinh viên thực hiện</th>
                                                            <th scope="col">Điểm cao nhất</th>
                                                            <th scope="col">Trạng thái</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{

                                                            var max = tests.Max(x => x.Score);
                                                            var test = tests.Where(x => x.Score == max).FirstOrDefault();
                                                            var st = @test.Status ? "Đạt yêu cầu" : "Chưa đặt yêu cầu";
                                                            if (test != null)
                                                            {
                                                                <tr>
                                                                    <th scope="row">1</th>

                                                                    <td>@test.Test_name</td>
                                                                    <td>@test.Student.Name</td>
                                                                    <td>@((float)test.Score)</td>
                                                                    <td>@st</td>

                                                                </tr>
                                                            }
                                                        }



                                                    </tbody>

                                                </table>

                                            </div>
                                        }
                                    }


                                </div>
                                <h4 class="card-title">
                                    <i class="m-r-5 font-22 mdi mdi-numeric-2-box-multiple-outline"></i>
                                    Danh sách lớp học
                                </h4>
                                <div class=" m-t-10">
                                    <a href="/class/create">
                                        <i class="fa fa-plus-square"></i> <span class="hide-menu m-l-5">Thêm lớp học</span>
                                    </a>
                                </div>
                                <div class="table-responsive">
                                    @for (var i = 0; i < classes.Length; i++)
                                    {
                                        var sub = classes[i];
                                        var sts = sub == null ? null : sub.Students.ToArray();
                                        var index = @i + 1;
                                        <h6 class="card-title">
                                            <a href="javascript:void(0)">
                                                <i class="m-r-5 font-18 mdi mdi-numeric-@index-box-multiple-outline"></i>
                                                @sub.Class_name
                                            </a>
                                        </h6>

                                        @if (sts == null || sts.Length == 0)
                                        {
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <span style="color:red">Không có sinh viên  </span>
                                                </div>
                                            </div>

                                        }
                                    }


                                </div>
                            </div>

                        </div>
                    </div>

                </div>
     
            </div>
      
            <footer class="footer text-center">
                All Rights Reserved by <a>TRACNGHIEMONLINE</a>.
            </footer>
        
        </div>
     
    </div>


    <script src="~/assets/libs/jquery/dist/jquery.min.js"></script>

    <script src="~/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/app-style-switcher.js"></script>
  
    <script src="~/dist/js/waves.js"></script>

    <script src="~/dist/js/sidebarmenu.js"></script>
 
    <script src="~/dist/js/custom.js"></script>
</body>

</html>